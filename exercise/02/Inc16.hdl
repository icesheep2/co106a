	FullAdder(a=in[5],b=in[5],c=g,sum=out[5],carry=h);
	FullAdder(a=in[6],b=in[6],c=h,sum=out[6],carry=i);
	FullAdder(a=in[7],b=in[7],c=i,sum=out[7],carry=j);
	FullAdder(a=in[8],b=in[8],c=j,sum=out[8],carry=k);
	FullAdder(a=in[9],b=in[9],c=k,sum=out[9],carry=l);
	FullAdder(a=in[10],b=in[10],c=l,sum=out[10],carry=m);
