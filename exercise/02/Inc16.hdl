    IN in[16];
    OUT out[16];

    PARTS:
   // Put you code here:{
 HalfAdder(a=in[0],b=in[0],sum=out[0],carry=c);
	FullAdder(a=in[1],b=in[1],c=c,sum=out[1],carry=d);
	FullAdder(a=in[2],b=in[2],c=d,sum=out[2],carry=e);
	FullAdder(a=in[3],b=in[3],c=e,sum=out[3],carry=f);
